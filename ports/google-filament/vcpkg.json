{
  "name": "google-filament",
  "version": "1.40.0",
  "description": "Filament is a real-time physically based rendering engine for Android, iOS, Windows, Linux, macOS, and WebGL2",
  "homepage": "https://github.com/google/filament",
  "supports": "windows | osx | linux",
  "dependencies": [
    "assimp",
    {
      "name": "basis-universal",
      "platform": "windows"
    },
    {
      "name": "basis-universal",
      "features": [
        "opencl"
      ],
      "platform": "!windows"
    },
    "cgltf",
    "civetweb",
    "draco",
    {
      "name": "getopt-win32",
      "platform": "windows"
    },
    "glslang",
    {
      "name": "glslang",
      "host": true,
      "features": [
        "tools"
      ]
    },
    {
      "name": "imgui",
      "features": [
        "metal-binding",
        "osx-binding"
      ],
      "platform": "osx"
    },
    {
      "name": "imgui",
      "features": [
        "glfw-binding"
      ],
      "platform": "linux"
    },
    {
      "name": "imgui",
      "features": [
        "dx11-binding",
        "dx12-binding"
      ],
      "platform": "windows"
    },
    "jsmn",
    "libpng",
    "meshoptimizer",
    "mikktspace",
    "miniz",
    "robin-map",
    {
      "name": "sdl2",
      "platform": "windows | osx"
    },
    "spirv-cross",
    "spirv-tools",
    "stb",
    "tinyexr",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    "zlib",
    "zstd"
  ],
  "default-features": [
    "test"
  ],
  "features": {
    "gles3": {
      "description": "Experimental: Compile Filament against OpenGL ES 3",
      "supports": "windows | linux",
      "dependencies": [
        "angle",
        {
          "name": "imgui",
          "features": [
            "opengl3-binding"
          ],
          "platform": "windows"
        }
      ]
    },
    "metal": {
      "description": "Include the Metal backend",
      "supports": "osx"
    },
    "samples": {
      "description": "Build samples"
    },
    "test": {
      "description": "Build test executables",
      "dependencies": [
        "benchmark",
        "gtest"
      ]
    },
    "vulkan": {
      "description": "Include the Vulkan backend",
      "supports": "windows | linux",
      "dependencies": [
        {
          "name": "imgui",
          "features": [
            "vulkan-binding"
          ]
        },
        "vulkan",
        "vulkan-memory-allocator"
      ]
    }
  }
}
