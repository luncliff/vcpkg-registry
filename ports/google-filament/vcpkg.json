{
  "name": "google-filament",
  "version": "1.37.0",
  "description": "Filament is a real-time physically based rendering engine for Android, iOS, Windows, Linux, macOS, and WebGL2",
  "homepage": "https://github.com/google/filament",
  "supports": "windows | osx | linux",
  "dependencies": [
    "basisu",
    "glslang",
    {
      "name": "imgui",
      "features": [
        "metal-binding",
        "osx-binding"
      ],
      "platform": "osx"
    },
    {
      "name": "imgui",
      "features": [
        "glfw-binding",
        "vulkan-binding"
      ],
      "platform": "linux"
    },
    {
      "name": "imgui",
      "features": [
        "dx11-binding",
        "dx12-binding",
        "opengl3-binding"
      ],
      "platform": "windows"
    },
    "libpng",
    "spirv-cross",
    "spirv-tools",
    "stb",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "vulkan",
    "zlib"
  ],
  "features": {
    "gles3": {
      "description": "Experimental: Compile Filament against OpenGL ES 3",
      "dependencies": [
        {
          "name": "angle",
          "platform": "windows"
        }
      ]
    }
  }
}
