{
  "name": "angle",
  "version-date": "2026-01-02",
  "description": "ANGLE (Almost Native Graphics Layer Engine) - OpenGL ES to platform graphics API translation",
  "homepage": "https://github.com/google/angle",
  "license": "BSD-3-Clause",
  "supports": "!emscripten",
  "dependencies": [
    "egl-registry",
    "opengl-registry",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "xxhash",
    {
      "name": "zlib-ng",
      "default-features": false,
      "features": [
        "zlib-compat"
      ]
    },
    {
      "name": "spirv-headers",
      "version>=": "1.4.328.0"
    },
    {
      "name": "spirv-tools",
      "version>=": "1.4.328.0"
    }
  ],
  "default-features": [
    {
      "name": "vulkan",
      "platform": "windows | linux"
    }
  ],
  "features": {
    "vulkan": {
      "description": "Build with Vulkan backend",
      "dependencies": [
        {
          "name": "vulkan-memory-allocator",
          "version>=": "1.4.328.0"
        },
        {
          "name": "vulkan-headers",
          "version>=": "1.4.328.0"
        },
        {
          "name": "vulkan-loader",
          "version>=": "1.4.328.0"
        }
      ]
    }
  }
}